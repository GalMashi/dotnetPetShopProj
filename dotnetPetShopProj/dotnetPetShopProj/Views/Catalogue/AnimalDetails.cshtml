@model dotnetPetShopProj.Models.Animal;
@{
    ViewData["Title"] = "AnimalDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AnimalDetails</h1>

<table>
    <tr>
        <td>@Model.AnimalName&nbsp;</td>
        <td>@Model.Age&nbsp;</td>
        <td>@Model.Category.Name&nbsp;</td>
        <td>@Model.Description&nbsp;</td>
        <td>
            <table class="commentList">
                @if (@ViewBag.selAnimalComment != null)
                {
                    @foreach (var comment in @ViewBag.selAnimalComment)
                    {
                        <tr>
                            <td>@comment.CommentContent</td>

                        </tr>
                        <tr>
                            <td><input type="text" placeholder="enter your questions here" /></td>
                        </tr>

                    }
                }
                else
                {
                    <tr>
                        <td><input type="text" placeholder="enter your questions here"/></td>
                    </tr>
                }

            </table>
        </td>
    </tr>
</table>