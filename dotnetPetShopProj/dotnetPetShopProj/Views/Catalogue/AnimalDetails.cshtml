<table>
    <tr>
        <td>@Model.AnimalName&nbsp;</td>
        <td>@Model.Age&nbsp;</td>
        @if (@Model.Description != null)
        {
            <td>@Model.Description&nbsp;</td>
        }
        else
        {
            <td>No Description currently</td>
        }
        <td>
            <table class="commentList">
                @if (@ViewBag.AnimalComments != null)
                {
                    <tr>
                        @foreach (var comment in Model.Comments)
                        {
                            <td> @comment.CommentContent</td>
                        }
                    </tr>
                }

                <tr>
                    <td>
                        <input id="commentBox" type="text" placeholder="enter your questions here" />
                        <input type="button" value="submit" onclick="regToTxt()" />
                    </td>
                </tr>

            </table>
        </td>
    </tr>
</table>